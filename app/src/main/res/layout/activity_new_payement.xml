<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.sixhackathon.bumppay.NewPayementActivity"
    android:background="@color/common_action_bar_splitter">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="75dp">

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Amount to Pay is"
                android:fontFamily="@string/auth_google_play_services_client_google_display_name"
                android:textSize="26dp"
                android:id="@+id/textViewToPayLabel"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:fontFamily="@string/auth_google_play_services_client_google_display_name"
                android:textSize="45dp"
                android:id="@+id/textViewToPay"
                android:layout_marginLeft="10dp"
                android:layout_row="0"
                android:layout_column="1" />

            </TableRow>

        </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp">

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="bump to pay"
                android:fontFamily="@string/auth_google_play_services_client_google_display_name"
                android:textSize="26dp"
                android:id="@+id/textView"
                android:layout_row="1"
                android:layout_column="0" />

            <Spinner
                android:id="@+id/b"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dialog"
                android:layout_row="1"
                android:layout_column="1" />

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CHF"
                android:fontFamily="@string/auth_google_play_services_client_google_display_name"
                android:textSize="26dp"
                android:id="@+id/textViewCHF"
                android:layout_row="1"
                android:layout_column="3" />
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="300dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/buttonCancel"
                android:onClick="cancelGoHome"
                android:layout_row="2"
                android:layout_column="0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:id="@+id/buttonDone"
                android:layout_row="2"
                android:layout_column="1" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
